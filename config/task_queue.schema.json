{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Autonomy Task Queue",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "owner", "priority", "title", "description"],
    "properties": {
      "id": {"type": "string", "minLength": 1},
      "owner": {"type": "string", "enum": ["codex", "gemini"]},
      "priority": {"type": "integer", "minimum": 0},
      "title": {"type": "string", "minLength": 1},
      "description": {"type": "string", "minLength": 1},
      "depends_on": {
        "type": "array",
        "items": {"type": "string"},
        "uniqueItems": true
      },
      "acceptance": {
        "type": "array",
        "items": {"type": "string"}
      }
    }
  }
}
