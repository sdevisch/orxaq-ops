{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodexAutonomyResult",
  "type": "object",
  "required": [
    "status",
    "summary",
    "commit",
    "validations",
    "blocker",
    "next_actions"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "done",
        "partial",
        "blocked"
      ]
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "commit": {
      "type": "string"
    },
    "validations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "blocker": {
      "type": "string"
    },
    "usage": {
      "type": "object",
      "properties": {
        "input_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "output_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "model": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
